<Profile_Screen>:
    name: "profile"
    MDBoxLayout:
        # md_bg_color: app.theme_cls.primary_color
        orientation:'vertical'

        MDToolbar:
            id:profile_bar
            title: "Profile"
            size_hint: 1,0.08
            # pos_hint: {"center_y":.965}
            left_action_items: [ ["arrow-left", lambda x:app.screen_manager.change_screen("home")]] 
            right_action_items: [ ["logout", lambda x:root.Logout() and app.screen_manager.change_screen("home") ]] 
            elevation: 5

        MDBoxLayout:
            orientation:'vertical'
            spacing: "20dp"
            
            MDCard:                
                orientation:'vertical'
                size_hint: None, None
                size: "250dp", "250dp"
                pos_hint: {"center_x": .5, "center_y": .5}

                Button:
                    id:profile_image
                    background_normal: "assets//img//blank_profile.png"
                    background_down: "assets//img//blank_profile.png"
                    on_release: root.change_profile_img()
            
                    
            MDList:

                TwoLineAvatarIconListItem:
                    id:profile_name
                    text: "Name"
                    secondary_text: "Luffy (Default Name)"

                    IconLeftWidget:
                        icon: "account"
                    
                    IconRightWidget:
                        icon: "pen"
                        on_release: root.change_profile_data(profile_name)
                    
                TwoLineAvatarIconListItem:
                    id:profile_username
                    text: 'Username'
                    secondary_text: "King (Default Username)"
                    IconLeftWidget:
                        icon: "at"
                    
                    IconRightWidget:
                        icon: "pen-lock"
                        # on_release: app.change_text_data(profile_username)
                
                TwoLineAvatarIconListItem:
                    id:profile_Phone
                    text: "Phone Number"
                    secondary_text: "8585858588 (Default)"

                    IconLeftWidget:
                        icon: "cellphone-android"
                    
                    IconRightWidget:
                        icon: "pen"
                        # on_release: root.change_profile_data(profile_Phone)
                
                TwoLineAvatarIconListItem:
                    id:del_media
                    text: "Delete All Media"
                    secondary_text: "you Won't be able to Retrive Media"

                    IconLeftWidget:
                        icon: "folder-image"
                    
                    IconRightWidget:
                        icon: "delete-forever"
                        on_release: root.del_media()
