<Verification_Screen>:
    name: "verification"
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"
    
    MDLabel:
        text: "Account verification"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
    
    MDLabel:
        text: "Please Enter the Password."
        halign: "center"
        pos_hint: {"center_y":.67}
        font_style: "Body2"
        
    MDTextField:
        id: pa
        hint_text: "Enter your Password"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: .75,0.08
        # max_text_length: 6
        # mode: "rectangle"

    MDRaisedButton:
        
        text: "Submit"
        pos_hint: {"center_x": 0.5, "center_y":0.42}
        size_hint: .7,0.05
        # on_release: app.screen_manager.change_screen("home")
        on_release: root.redirect_p(pa.text)
        
    # MDTextButton:
    #     text: "Resend code"
    #     pos_hint: {"center_x": 0.5, "center_y":0.45}

    MDLabel:
        text: "Never share your Password to anyone."
        halign: "center"
        pos_hint: {"center_y":.3}
        font_style: "Caption"

    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]{app.COMPANY_NAME} 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        