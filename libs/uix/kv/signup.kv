<Signup_Screen>:
    name: "signup"
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"
    
    MDLabel:
        text: "Sign up"
        halign: "center"
        pos_hint: {"center_y":.73} 
        font_style: "Subtitle2"
   
    MDTextField:
        id: Phone
        hint_text: "Phone Number"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: .75,0.085
        max_text_length: 10
        input_filter: 'int'
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter 10 Numbers"    
    # MDTextField:
    #     id: Email
    #     hint_text: "Email"
    #     pos_hint: {"center_x": 0.5, "center_y": 0.65}
    #     size_hint: .75,0.08
        # mode: "rectangle"
    
    MDTextField:
        id: Name
        hint_text: "Name"
        pos_hint: {"center_x":0.5, "center_y":0.57}
        size_hint: .75,0.08
        # mode: "rectangle"
    
    MDTextField:
        id: Username
        hint_text: "Username"
        pos_hint: {"center_x":0.5, "center_y":0.49}
        size_hint: .75,0.08
        # mode: "rectangle"
    
    MDTextField:
        id: Password
        hint_text: "Password"
        pos_hint: {"center_x":0.5, "center_y":0.41}
        size_hint: .75,0.08
        password: True
        # mode: "rectangle"
    MDTextField:
        id: Confirm_pass
        hint_text: "Confirm Password"
        pos_hint: {"center_x":0.5, "center_y":0.31}
        size_hint: .75,0.08
        password: True
        # mode: "rectangle"

    MDRaisedButton:
        text: "Sign up"
        pos_hint: {"center_x": 0.5, "center_y":0.21}
        size_hint: .7,0.05
        # on_press:
            # app.screen_manager.change_screen("login")
        on_release:
            root.Sign_me_up(Phone.text,Name.text,Username.text,Password.text,Confirm_pass.text)
            # root.Sign_me_up(Phone.text,Name.text,Username.text)
            # app.screen_manager.change_screen("login")


    
    MDTextButton:
        text: f"[color=#000000]Have an account?[/color] Log in"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.12}
        on_release: 
            app.screen_manager.change_screen("login")
               
    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]{app.COMPANY_NAME} 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        