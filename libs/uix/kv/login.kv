<Login_Screen>:
    name: "login"
    MDLabel:
        text: app.APP_NAME
        halign: "center"
        pos_hint: {"center_y": .8}
        font_style: "H3"

    MDLabel:
        text: "Log in"
        halign: "center"
        pos_hint: {"center_y":.73}
        font_style: "Subtitle2"
        
    MDTextField:
        id: Phone
        hint_text: "Phone Number"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: .75,0.085
        max_text_length: 10
        input_filter: 'int'
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter 10 Numbers"
        # on_focus: True
        # mode: "rectangle"
    
    # MDTextField:
    #     id: Password
    #     hint_text: "Password"
    #     pos_hint: {"center_x":0.5, "center_y":0.57}
    #     size_hint: .75,0.085
    #     password: True
        # mode: "rectangle"
        
    
    MDRaisedButton:
        text: "Login"
        pos_hint: {"center_x": 0.5, "center_y":0.48}
        size_hint: .7,0.05
        on_press: Phone.focus = True
        on_release: root.sign_in(Phone.text) if root.ids.Phone != '' else root.sign_in('999999')
            

    # MDTextButton:
    #     text: "Forgot password?"
    #     pos_hint: {"center_x":0.5, "center_y":0.4}
    #     on_release: app.screen_manager.change_screen("forgot")

    MDTextButton:
        text: f"[color=#000000]Don't have an account?[/color] Sign up"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.33}
        on_release: app.screen_manager.change_screen("signup")
    
    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font]  [font=Roboto]{app.COMPANY_NAME} 2021[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}